{
	"name": "nestjs-boilerplate",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
		"typeorm:run-migrations": "npm run typeorm migration:run -- -d ./dist/typeorm.config.js",
		"typeorm:generate-migration": "npm run typeorm -- -d ./dist/typeorm.config.js migration:generate ./src/module/database/migrations",
		"typeorm:create-migration": "npm run typeorm -- migration:create ./src/module/database/migrations",
		"typeorm:revert-migration": "npm run typeorm -- -d ./dist/typeorm.config.js migration:revert",
		"migration:run": "pnpm run typeorm -- --dataSource=src/module/database/data-source.ts migration:run",
		"migration:revert": "pnpm run typeorm -- --dataSource=src/module/database/data-source.ts migration:revert",
		"schema:drop": "pnpm run typeorm -- --dataSource=src/module/database/data-source.ts schema:drop",
		"seed:run": "ts-node -r tsconfig-paths/register ./src/module/database/seeds/run-seed.ts",
		"db": "pnpm run migration:run && pnpm run seed:run",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"dependencies": {
		"@casl/ability": "^6.7.1",
		"@nestjs/axios": "^3.0.2",
		"@nestjs/common": "^10.3.9",
		"@nestjs/config": "^3.2.2",
		"@nestjs/core": "^10.3.9",
		"@nestjs/cqrs": "^10.2.7",
		"@nestjs/event-emitter": "^2.0.4",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.3.9",
		"@nestjs/schedule": "^4.0.0",
		"@nestjs/serve-static": "^4.0.0",
		"@nestjs/swagger": "^7.2.0",
		"@nestjs/throttler": "^5.2.0",
		"@nestjs/typeorm": "^10.0.1",
		"@types/passport-jwt": "^4.0.1",
		"argon2": "^0.40.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"date-fns": "^3.4.0",
		"dotenv": "^16.4.1",
		"exceljs": "^4.4.0",
		"hbs": "^4.2.0",
		"hygen": "^6.2.11",
		"ioredis": "^5.4.1",
		"joi": "^17.12.0",
		"libphonenumber-js": "^1.10.54",
		"lodash": "^4.17.21",
		"moment": "^2.30.1",
		"nestjs-i18n": "^10.4.5",
		"nestjs-throttler-storage-redis": "^0.4.4",
		"nodemailer": "^6.9.8",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"passport-local": "^1.0.0",
		"pg": "^8.11.3",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"typeorm": "^0.3.20",
		"uuid": "^9.0.1",
		"winston": "^3.8.2",
		"winston-daily-rotate-file": "^4.7.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.0",
		"@commitlint/config-conventional": "^18.6.0",
		"@nestjs/cli": "^10.3.2",
		"@nestjs/schematics": "^10.1.1",
		"@nestjs/testing": "^10.3.9",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.2",
		"@types/lodash": "^4.17.5",
		"@types/node": "^20.3.1",
		"@types/passport-local": "^1.0.38",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^9.0.8",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.14.1",
		"env-cmd": "^10.1.0",
		"eslint": "^9.5.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-unused-imports": "^4.0.0",
		"husky": "^9.0.6",
		"jest": "^29.5.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.3.2",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.2"
	},
	"engines": {
		"node": ">= 20"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
