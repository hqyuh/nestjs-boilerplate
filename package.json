{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --config .prettierrc --write --ignore-unknown \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./dist/typeorm.config.js",
    "typeorm:generate-migration": "npm run typeorm -- -d ./dist/typeorm.config.js migration:generate ./src/module/database/migrations",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./src/module/database/migrations",
    "typeorm:revert-migration": "npm run typeorm -- -d ./dist/typeorm.config.js migration:revert",
    "migration:run": "pnpm run typeorm -- --dataSource=src/module/database/data-source.ts migration:run",
    "migration:revert": "pnpm run typeorm -- --dataSource=src/module/database/data-source.ts migration:revert",
    "schema:drop": "pnpm run typeorm -- --dataSource=src/module/database/data-source.ts schema:drop",
    "seed:run": "ts-node -r tsconfig-paths/register ./src/module/database/seeds/run-seed.ts",
    "db": "pnpm run migration:run && pnpm run seed:run",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@casl/ability": "^6.7.1",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.0.9",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.9",
    "@nestjs/cqrs": "^11.0.2",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.9",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/serve-static": "^5.0.2",
    "@nestjs/swagger": "^11.0.3",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "argon2": "^0.41.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "globals": "^15.11.0",
    "hbs": "^4.2.0",
    "helmet": "^8.0.0",
    "hygen": "^6.2.11",
    "ioredis": "^5.5.0",
    "joi": "^17.13.3",
    "libphonenumber-js": "^1.10.54",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "nestjs-i18n": "^10.5.0",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-transactional": "^0.5.0",
    "uuid": "^9.0.1",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@nestjs/cli": "^11.0.2",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.9",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "8.24.1",
    "@typescript-eslint/parser": "8.24.1",
    "env-cmd": "^10.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.5.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">= 20"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.(service|handler).(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "mocks"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@module/(.*)$": "<rootDir>/module/$1",
      "^@common/(.*)$": "<rootDir>/common/$1",
      "^@apis/(.*)$": "<rootDir>/apis/$1",
      "^packageJson$": "<rootDir>/../package.json"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/"
    ],
    "maxWorkers": 1,
    "detectOpenHandles": true
  },
  "packageManager": "pnpm@10.4.0"
}
